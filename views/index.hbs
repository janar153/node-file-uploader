{{#if userContext}}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Files</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group mr-2">
                <a href="/upload" class="btn btn-sm btn-outline-secondary">Upload</a>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <div class="row">
            {{#if message}}
                <div class="col-12">
                    <div class="alert alert-info" role="alert">
                        {{message}}
                    </div>
                </div>
            {{/if}}

            {{#each files }}
                <div class="col-3 pb-2">
                    <div class="card">
                        <img src="{{this.src}}" class="card-img-top" alt="{{this.filename}}">
                        <div class="card-body">
                            <p class="card-text">{{this.src}}</p>
                            <p class="card-text"><small class="text-muted">File added: {{this.last_updated}}</small></p>
                            <a href="/files/delete/{{this.filename}}" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
{{else}}
    <div class="alert alert-warning" role="alert">
        Please log in or register
    </div>
{{/if}}